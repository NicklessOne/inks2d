{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["ESNext", "DOM"],
		"strict": true,
		"sourceMap": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"declaration": true,
		"declarationDir": "./dist/",
		"emitDeclarationOnly": true,
		"allowJs": false
	},
	"include": ["src"]
}
